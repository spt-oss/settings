<?xml version="1.0" encoding="utf-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
	<servers>
		<server>
			<id>sonatype</id>
			<username>${MAVEN_USERNAME}</username>
			<password>${MAVEN_PASSWORD}</password>
		</server>
	</servers>
	<profiles>
		<profile>
			<id>gpg</id>
			<properties>
				<gpg.keyname>${GPG_KEYNAME}</gpg.keyname>
				<gpg.passphrase>${GPG_PASSPHRASE}</gpg.passphrase>
				<gpg.publicKeyring>${HOME}/${CIRCLE_PROJECT_REPONAME}/${CIRCLE_DIR}/pubring.gpg</gpg.publicKeyring>
				<gpg.secretKeyring>${HOME}/${CIRCLE_PROJECT_REPONAME}/${CIRCLE_DIR}/secring.gpg</gpg.secretKeyring>
			</properties>
		</profile>
	</profiles>
</settings>
